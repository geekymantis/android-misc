<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ModernArt">


    <TextView
        android:background="@drawable/mybox"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:text=""
        android:id="@+id/Rect0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Rect1"
        android:layout_toLeftOf="@+id/Rect1"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"/>

    <TextView
        android:background="@drawable/mybox"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Rect1"
        android:layout_alignTop="@+id/Rect0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp" />

    <TextView
        android:background="@drawable/mybox"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Rect2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Rect4"
        android:layout_toStartOf="@+id/Rect4"
        android:layout_above="@+id/seekBar"
        android:layout_below="@+id/Rect0"
        android:layout_marginRight="3dp"/>

    <TextView
        android:background="@drawable/mybox"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Rect3"
        android:layout_alignLeft="@+id/Rect1"
        android:layout_alignStart="@+id/Rect1"
        android:layout_below="@+id/Rect1"
        android:layout_above="@+id/Rect4" />

    <TextView
        android:background="@drawable/mybox"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Rect4"
        android:layout_alignBottom="@+id/Rect2"
        android:layout_alignRight="@+id/Rect3"
        android:layout_alignEnd="@+id/Rect3"
        android:layout_marginTop="3dp"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Rect3"
        android:layout_alignEnd="@+id/Rect3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
